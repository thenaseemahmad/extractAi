{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@chrome-buildin-ai-naseem/chrome-buildin-ai-api": [
        "libs/chrome-buildin-ai-api/src/index.ts"
      ],
      "@chrome-buildin-ai-naseem/endpoints": ["libs/endpoints/src/index.ts"],
      "@chrome-buildin-ai-naseem/errors": ["libs/errors/src/index.ts"],
      "@chrome-buildin-ai-naseem/interfaces": ["libs/interfaces/src/index.ts"],
      "@chrome-buildin-ai-naseem/middlewares": [
        "libs/middlewares/src/index.ts"
      ],
      "@chrome-buildin-ai-naseem/react-base-comps": [
        "libs/react-base-comps/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
