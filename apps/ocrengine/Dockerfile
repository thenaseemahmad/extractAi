FROM docker.io/node:20.18.0

RUN apt-get update -y && apt-get upgrade -y
RUN apt-get install -y tesseract-ocr

RUN tesseract --version

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

COPY dist/apps/ocrengine ocrengine/
RUN mkdir ocrengine/apps/ocrengine/src/uploads
RUN npm --prefix ocrengine --omit=dev -f install

CMD [ "node", "ocrengine" ]
